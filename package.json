{
    "name": "mermaid-class-tools",
    "displayName": "%displayName%",
    "description": "%description%",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.70.0"
    },
    "icon": "icon.png",
    "license": "MIT",
    "publisher": "OmojiP",
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "vscode:prepublish": "npm run compile",
        "package": "npx @vscode/vsce package",
        "audit": "npm audit"
    },
    "activationEvents": [
        "onLanguage:markdown"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "markdown",
                "extensions": [
                    ".md"
                ]
            }
        ],
        "codeActions": [
            {
                "language": "markdown",
                "title": "%codeActionTitle%"
            }
        ],
        "configuration": {
            "title": "%configurationTitle%",
            "properties": {
                "mermaidClassTools.enableRename": {
                    "type": "boolean",
                    "default": true,
                    "description": "%config.enableRename.description%"
                },
                "mermaidClassTools.enableArrowActions": {
                    "type": "boolean",
                    "default": true,
                    "description": "%config.enableArrowActions.description%"
                },
                "mermaidClassTools.enableArrowHover": {
                    "type": "boolean",
                    "default": true,
                    "description": "%config.enableArrowHover.description%"
                }
            }
        }
    },
    "devDependencies": {
        "@types/node": "^22.13.10",
        "@types/vscode": "^1.70.0",
        "typescript": "^5.8.2"
    }
}